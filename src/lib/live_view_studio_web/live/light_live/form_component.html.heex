<div>
  <h2><%= @title %></h2>

  <.form
    let={f}
    for={@changeset}
    id="light-form"
    phx-target={@myself}
    phx-change="validate"
    phx-submit="save">
  
    <%= label f, :name %>
    <%= text_input f, :name %>
    <%= error_tag f, :name %>
  
    <%= label f, :brightness %>
    <%= number_input f, :brightness %>
    <%= error_tag f, :brightness %>
  
    <div>
      <%= submit "Save", phx_disable_with: "Saving..." %>
    </div>
  </.form>
</div>
